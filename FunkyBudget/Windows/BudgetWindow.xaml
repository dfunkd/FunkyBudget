<Window x:Class="FunkyBudget.Windows.BudgetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:FunkyBudget.Windows"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:FunkyBudget.UserControls"
        xmlns:vm="clr-namespace:FunkyBudget.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        d:DataContext="{d:DesignInstance Type=vm:BudgetViewModel}"
        mc:Ignorable="d"
        Background="{DynamicResource Darkest}"
        ResizeMode="NoResize"
        Title="{Binding Path=Title}"
        WindowState="Maximized"
        WindowStyle="None"
        Loaded="OnLoad"
        SourceInitialized="OnSourceInitialized">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:BudgetWindow.CloseCommand}" CanExecute="CanExecuteCloseCommand" Executed="ExecutedCloseCommand" />
    </Window.CommandBindings>

    <Window.DataContext>
        <vm:BudgetViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border x:Name="brdHeader" Grid.Row="0" Background="{DynamicResource HeaderFade}" BorderThickness="1" BorderBrush="{DynamicResource Darkest}" CornerRadius="0"
                MouseDown="OnDrag">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Left" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource Lightest}" HorizontalAlignment="Left" Margin="10"
                           Text="{Binding Title}" VerticalAlignment="Center" />
                <Button DockPanel.Dock="Right" Background="Transparent" Command="local:BudgetWindow.CloseCommand" Height="25" Margin="10, 0"
                        Style="{DynamicResource faButtonStyle}" VerticalAlignment="Center" Width="25">
                    <Button.Content>
                        <fa:ImageAwesome Foreground="{DynamicResource Lightest}" Height="15" Icon="Close" Stretch="Uniform" Width="15" />
                    </Button.Content>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="0" />
                        </Style>
                    </Button.Resources>
                </Button>
                <Rectangle DockPanel.Dock="Left" />
            </DockPanel>
        </Border>

        <uc:BudgetCalendar Grid.Row="1" Background="{DynamicResource Lighter}" />
    </Grid>
</Window>